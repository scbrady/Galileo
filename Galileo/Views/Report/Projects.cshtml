@model Galileo.ViewModels.CourseProjectsAndUsers

@{
    ViewBag.Title = "Project Page";
}

<h3>Projects</h3>
<div class="row">
    @for (int index = 0; index < Model.projects.Count; index++)
    {
        <div class="col-md-4">
            <div class="module">
                <a href="Project?projectId=@Model.projects[index].project_id">
                    <div class="inner_mod">
                        <h1>@Model.projects[index].project_name</h1>
                        <h4>Total Hours: <strong>@Model.projects[index].project_total_hours</strong> / Total Hours: <strong>@Model.projects[index].project_total_hours</strong> / Total Hours: <strong>@Model.projects[index].project_total_hours</strong></h4>
                    </div>
                </a>
            </div>
        </div>
    }
</div>

<h3>Teams</h3>
<div class="row">
    @for (int index = 0; index < Model.teamsView.Count; index++)
    {
        <div class="col-md-4">
            <div class="module">
                <a href="Team?teamId=@Model.teamsView[index].project_id">
                    <div class="inner_mod">
                        <h1>@Model.teamsView[index].project_name</h1>
                        <h4>Total Hours: <strong>@Model.teamsView[index].project_total_hours</strong> / Total Hours: <strong>@Model.teamsView[index].project_total_hours</strong> / Total Hours: <strong>@Model.teamsView[index].project_total_hours</strong></h4>
                    </div>
                </a>
            </div>
        </div>
    }
</div>

<h3>Users</h3>
<div class="row">
    @for (int index = 0; index < Model.users.Count; index++)
    {
        <div class="col-md-4">
            <div class="module">
                <a href="Individual?userId=@Model.users[index].user_id">
                    <div class="inner_mod">
                        <h1>@Model.users[index].user_first_name @Model.users[index].user_last_name</h1>
                        <h4>Total Hours: <strong>@Model.users[index].user_total_hours</strong> / Total Hours: <strong>@Model.users[index].user_total_hours</strong> / Total Hours: <strong>@Model.users[index].user_total_hours</strong></h4>
                    </div>
                </a>
            </div>
        </div>
    }
</div>