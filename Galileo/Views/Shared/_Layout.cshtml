<!DOCTYPE html>
<html>
    <head>
        <meta charset="utf-8" />
        <meta name="viewport" content="width=device-width, initial-scale=1.0">
        <link rel="icon" href="@Url.Content("~/Content/favicon.ico")" />
        <title>@ViewBag.Title - My ASP.NET Application</title>
        @Styles.Render("~/Content/css")
        @Scripts.Render("~/bundles/modernizr")
        @RenderSection("styles", required: false)
    </head>

    <body>
        <nav class="navbar navbar-default fixed" role="navigation">
            <div id="nav-color"></div>
            <img src="~/Content/Images/circle_logo.png" class="center-block logo-img" />
            <a class="navbar-brand" href="#"><strong>@GlobalVariables.CurrentUser.user_first_name  @GlobalVariables.CurrentUser.user_last_name</strong></a>

            <div class="nav nav-tabs nav-stacked nav-items">
                <ul class="nav navbar-nav">
                    @if (GlobalVariables.CurrentUser.user_is_teacher)
                    {
                        <li><a href="/Team"><span class="glyphicon glyphicon-cog"></span>&nbsp&nbspTeams</a></li>
                    }
                    <li><a href="/Report"><span class="glyphicon glyphicon-file"></span>&nbsp&nbspReporting</a></li>
                    <li><a href="/Comment"><span class="glyphicon glyphicon-comment"></span>&nbsp&nbspComments</a></li>
                </ul>
            </div>
        </nav>
        <div class="container">
            @RenderBody()
        </div>
        @Scripts.Render("~/bundles/jquery")
        @Scripts.Render("~/bundles/bootstrap")
        @RenderSection("scripts", required: false)
    </body>
</html>
